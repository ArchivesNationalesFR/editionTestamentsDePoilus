                  <date type="willDate" when="1914-10-14">le 14 octobre 1914</date><choice><sic/><corr>.</corr></choice></dateline>
            <signed rend="right"><persName ref="#pers-187">E <surname>Courrier</surname></persName></signed>
         </div>
