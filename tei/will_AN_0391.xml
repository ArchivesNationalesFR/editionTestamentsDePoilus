    <text xml:id="will_AN_0391">
        <body>
            <div type="will">
                <pb facs="#FRAN_Poilus_t-0391_01"/>
                <dateline><placeName type="willPlace" ref="#pl-2">Paris</placeName> <date type="willDate" when="1914-08-03">3 août 1914</date></dateline>
                <space dim="vertical" unit="lines" quantity="1"/>
                <p>Je <choice><sic>sousigne</sic><corr>soussigné</corr></choice> <persName ref="#pers-533"><surname>Gourmelen</surname> <lb/>Yves</persName> demeurant
                    56 rue <lb/>de la Verrerie <add place="inline">donne</add> à
                        <persName>Mademoiselle <lb/>Marie Louise Chanteloup</persName> <lb/>tout ce
                            <choice><sic>qui</sic><corr>que je</corr></choice> possède chez
                            <lb/><choice><sic>lui mobilliers</sic><corr>moi,
                        mobilier,</corr></choice> argent <lb/>et
                        titre<choice><sic/><corr>,</corr></choice> donnant
                            <choice><sic>tout</sic><corr>tous</corr></choice> <lb/>ces pouvoirs à
                    cette <lb/><choice><sic>Personne</sic><corr>personne.</corr></choice></p>
                <space dim="vertical" unit="lines" quantity="15"/>
                <signed><choice><sic>Lû</sic><corr>Lu</corr></choice> et approuvé<choice><sic/><corr>.</corr></choice> <persName ref="#pers-533">Yves <surname>Gourmelen</surname></persName></signed>
            </div>
        </body>
    </text>
