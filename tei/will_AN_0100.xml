    <text xml:id="will_AN_0100">
        <body>
            <div type="will">
                <pb facs="#FRAN_Poilus_t-0100_01"/>
                <head>Ceci est mon testament</head>
                <space quantity="2" unit="lines" dim="vertical"/>
                <p>Je <choice><sic>legue</sic><corr>lègue</corr></choice> tous mes meubles<choice><sic/><corr>,</corr></choice> <lb/>titres et argent à <persName>Mademoiselle <lb/>Suzanne <surname>Deschamps</surname></persName><choice><sic/><corr>,</corr></choice> ma nièce<choice><sic/><corr>.</corr></choice></p>
                <space quantity="1" unit="lines" dim="vertical"/>
                <dateline>Fait à <placeName type="willPlace" ref="#pl-2">Paris</placeName>
                    <lb/>le <date type="willDate" when="1914-11-29"><choice><sic>Vingt neuf Novembre</sic><corr>vingt-neuf novembre</corr></choice> 1914</date><choice><sic/><corr>.</corr></choice></dateline>
                <space quantity="2" unit="lines" dim="vertical"/>
                <signed rend="centered"><persName ref="#pers-156">Jules <surname>Deschamps</surname></persName>
                    <lb/><space quantity="1" unit="lines" dim="vertical"/>2 avenue d’Orléans<choice><sic/><corr>.</corr></choice></signed>
            </div>
        </body>
    </text>
