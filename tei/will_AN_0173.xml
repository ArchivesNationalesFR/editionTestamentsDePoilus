                <pb facs="#FRAN_Poilus_t-0173_03_ab"/>
                <p rend="right"><choice><sic>A</sic><corr>À</corr></choice> <persName>Madame Marius
                    <surname>Tarral</surname></persName> <lb/>34
                    <choice><sic>Rue</sic><corr>rue</corr></choice> Bergère<choice><sic><surplus> 34</surplus></sic><corr></corr></choice> <placeName
                        type="otherPlace" ref="#pl-2"><supplied reason="hidden">Paris</supplied></placeName><choice><sic></sic><corr>.</corr></choice></p>
                <p rend="centered">Testament de <persName ref="#pers-235">Monsieur M.
                            <surname>Tarral</surname></persName> <lb/>34
                    <choice><sic>Rue</sic><corr>rue</corr></choice> Bergère<choice><sic><surplus> 34</surplus></sic><corr></corr></choice> - <placeName
                        type="willAuthorResidence" ref="#pl-2">Paris</placeName><choice><sic></sic><corr>.</corr></choice></p>
                <metamark function="separating" rend="horizontal-line"/>
                <postscript rend="centered">
                    <p><persName ref="#pers-235"><choice><abbr>M<hi rend="superscript-underlined"
                                        >r</hi></abbr><expan>Monsieur</expan></choice> Marius
                                <surname>Tarral</surname></persName> <lb/>Sergent 29<hi
                            rend="superscript"><unclear reason="quite-illegible">e</unclear></hi>
                            Compagnie <lb/><orgName ref="#o-167">146<hi rend="superscript-underlined"
                                    ><choice><sic><unclear>me</unclear></sic><corr>e</corr></choice></hi> <choice><abbr>Rég<hi
                                        rend="superscript-underlined"
                                    >t</hi></abbr><expan>régiment</expan></choice>
                                    d’<choice><sic>Infanterie</sic><corr>infanterie</corr></choice></orgName>. <lb/><placeName
                            type="otherPlace"><hi rend="underlined">Carcassonne</hi></placeName><choice><sic></sic><corr>.</corr></choice></p>
                </postscript>
                <pb facs="#FRAN_Poilus_t-0173_04"/>
                <signed rend="centered"><persName ref="#pers-235"
                                >M.<surname>T.</surname></persName></signed>
            </div>
